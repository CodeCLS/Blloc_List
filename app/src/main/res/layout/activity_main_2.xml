<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#000"
    android:id="@+id/motionlayout_1"

    app:layoutDescription="@xml/activity_main_scene"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/linear_item_favourite_holder"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"

        android:background="@drawable/round_grey_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/rec_2"
        >

        <include
            android:id="@+id/include_favourite_item_0"
            layout="@layout/view_favourite_item"

            />

        <include
            android:id="@+id/include_favourite_item_1"
            layout="@layout/view_favourite_item"

            />
        <include
            android:id="@+id/include_favourite_item_2"
            layout="@layout/view_favourite_item"

            />


    </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_2"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:translationY="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_item_favourite_holder"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="true"
            android:layout_height="match_parent"

            android:background="@drawable/round_grey_dark_background"
            />













</androidx.constraintlayout.motion.widget.MotionLayout>